{
    "name": "antlers-statamic",
    "description": "Provides Antlers syntax highlighting, formatting, error reporting, project-specific suggestions, and more.",
    "author": "John Koster",
    "license": "MIT",
    "version": "0.1.26",
    "publisher": "stillat",
    "engines": {
        "vscode": "^1.67.0"
    },
    "repository": {
        "type": "git",
        "url": "https://github.com/Stillat/vscode-antlers"
    },
    "keywords": [
        "statamic",
        "intellisense",
        "antlers",
        "template"
    ],
    "categories": [
        "Programming Languages"
    ],
    "contributes": {
        "languages": [
            {
                "id": "html",
                "aliases": [
                    "HTML (Statamic Antlers)",
                    "antlers"
                ],
                "extensions": [
                    ".html",
                    ".htm",
                    ".xhtml"
                ],
                "configuration": "./antlers.configuration.json"
            }
        ],
        "grammars": [
            {
                "language": "html",
                "scopeName": "text.html.statamic",
                "path": "./syntaxes/antlers.json",
                "embeddedLanguages": {
                    "meta.embedded.block.frontmatter": "yaml",
                    "source.php": "php"
                }
            }
        ],
        "semanticTokenScopes": [
            {
                "scopes": {
                    "antlersAttribute": [
                        "entity.other.attribute-name"
                    ]
                }
            }
        ]
    },
    "dependencies": {
        "await-notify": "^1.0.1",
        "chokidar": "^3.5.2",
        "file-uri-to-path": "^2.0.0",
        "js-beautify": "^1.13.13",
        "lru-cache": "^4.1.5",
        "ts-debounce": "^3.0.0",
        "ts-md5": "^1.2.9",
        "vscode-debugadapter": "^1.49.0",
        "vscode-languageclient": "^7.0.0",
        "vscode-languageserver": "^7.0.0",
        "vscode-languageserver-textdocument": "^1.0.1",
        "yaml": "^1.10.2"
    },
    "devDependencies": {
        "@types/vscode": "^1.67.0",
        "js-yaml": "^4.0.0",
        "vscode-test": "^1.3.0"
    }
}
